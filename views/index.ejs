<!DOCTYPE html>
<html lang="es">
  <%- include('partials/head.ejs')  %> 
<body>
  <%- include('partials/header.ejs')  %> 
  <main>
    <h2 class="text-center">Nuestras sucursales</h2>
    <section class="container">
      <div class="row">
        <% sucursales.forEach(sucursal => { %>
          <div class="card col-sm-12 col-md-4 col-lg-3 mb-1" >
            <img src="/images/<%- sucursal.imagen %>" class="card-img-top" alt="...">
            <div class="card-body">
              <h5 class="card-title"><%- sucursal.nombre%> </h5>
              <p class="card-text"><%- sucursal.direccion %></p>
              <p class="card-text"><%- sucursal.telefono %></p>
              <a href="/sucursal/<%- sucursal.id %>" class="btn btn-primary">VER SUCURSAL</a>
            </div>
          </div>
        <% }) %>
      </div>
    </section>
  </main>
  <%- include('partials/footer.ejs')  %> 
  <%- include('partials/scripts.ejs')  %> 
</body>
</html>